{
  "extends": [
    "standard",
    "react-app/jest",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:storybook/recommended",
    "plugin:cypress/recommended",
    "plugin:json/recommended-legacy",
    "prettier"
  ],
  "plugins": ["@stylistic/js"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": { "version": "18.3" }
  },
  "overrides": [
    {
      "files": ["**/*.cy.jsx"],
      "rules": {
        "jest/valid-expect": "off"
      }
    }
  ],
  "rules": {
    "react/prop-types": "off",
    "eqeqeq": [2, "smart"],
    "no-console": "warn",
    "camelcase": "off",
    "no-eval": "error",
    "import/first": "error"
  }
}

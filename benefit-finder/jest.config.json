{
  "modulePathIgnorePatterns": [
    "node_modules",
    "jest-test-results.json"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/**/*.stories.jsx",
    "!<rootDir>/node_modules/",
    "!<rootDir>/jest-test-results.json",
    "!**/__tests__/assets/*.jsx"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "coverageReporters": [
    "text"
  ],
  "clearMocks": true
}
